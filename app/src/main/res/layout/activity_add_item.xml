<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.bucketsoft.jacketbucket.AddItemActivity">


    <ToggleButton
        android:id="@+id/kkButton"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="23dp"
        android:text="Kitap"
        android:textOff="Kitap"
        android:textOn="KÄ±yafet"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.052"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/bookNameTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/authorTxt"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="17dp"
        android:ems="10"
        android:hint="Name of the Book"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="20dp"
        tools:layout_editor_absoluteY="109dp" />

    <EditText
        android:id="@+id/authorTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/placesSpinner"
        android:layout_marginBottom="54dp"
        android:ems="10"
        android:hint="Author of the Book"
        android:inputType="textAutoComplete"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="183dp" />

    <Spinner
        android:id="@+id/placesSpinner"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/kkButton"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="178dp"
        android:entries="@array/locations_array"
        android:prompt="@string/location_prompt"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="276dp" />

    <ImageButton
        android:id="@+id/photoPickerButton"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_alignEnd="@+id/placesSpinner"
        android:layout_alignTop="@+id/kkButton"
        android:background="@android:drawable/ic_menu_gallery" />

    <Button
        android:id="@+id/addButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="18dp"
        android:text="Ekle" />

</RelativeLayout>